<%- include('./partials/header'); %>
<div id=""
<form action="/comments" method="POST" id="create">
    <input type="text" placeholder="Season? Episode?" name="caption" class="input"><br>
    <input type="text" placeholder="What do you have to Say?!?" name="content" class="input">
    <button>Submit</button>
    </form>


<% comments.forEach(function(c) { %>
<form action="/comments/<%= c._id%>?_method=DELETE" method="POST" id="form">
    <div id="comment">
    <div><h1 id="caption"><%= c.caption %></h1></div>
    <div><p id="content"><%= c.content %></p></div>     
</form>
<div class="buttons">
    <button id="edit"><a href="/comments/<%= c._id %>/edit" id="editpath">Edit</a></button>
    <button type="submit" id="delete">Delete</button>
</div>

</div>

<% }) %>